<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="proyecto_dam.Card" owl="1">
        <div class="col">
            <div class="card h-100">                
                <div class="card-body">
                    <p class="card-text">
                        <t t-esc="source.summary" /></p>

                </div>
                <div class="card-footer">
                    <button class="btn btn-outline-primary" t-on-click="requestCode">
                        <img
                            t-attf-src="/proyecto_dam/static/img/{{source.img_name}}-48.png" class="mx-1"
                            width="24"
                            t-att-alt="source.name"></img>
                        <t t-esc="source.name"></t>
                        
                    </button>
                </div>                
            </div>
        </div>
    </t>
</templates>