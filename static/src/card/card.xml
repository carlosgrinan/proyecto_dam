<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="proyecto_dam.Card" owl="1">
        <div class="col">
            <div class="card h-100">                
                <div class="card-body">
                    <p t-if="state.summary" class="card-text">
                        <t t-esc="state.summary" /></p>

                </div>
                <div class="card-footer">
                    <t t-if="state.summary">
                        <button class="btn btn-outline-secondary" t-on-click="disconnect">
                            <img
                                t-attf-src="/proyecto_dam/static/img/{{source.name}}-48.png" class="mx-1"
                                width="24"
                                t-att-alt="source.display_name"></img>
                            <p>Desconectar <t t-esc="source.display_name"></t></p>
                        </button>
                    </t>
                    <t t-else="">
                        <button class="btn btn-outline-primary" t-on-click="connect">
                            <img
                                t-attf-src="/proyecto_dam/static/img/{{source.name}}-48.png" class="mx-1"
                                width="24"
                                t-att-alt="source.display_name"></img>
                            <p>Conectar <t t-esc="source.display_name"></t></p>
                        </button>
                    </t>
                </div>                
            </div>
        </div>
    </t>
</templates>