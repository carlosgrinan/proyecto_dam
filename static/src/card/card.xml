<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="reviews_insights.Card" owl="1">
        <!--  'if state.summary' is used as a synonym of 'connected' -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <p t-if="state.summary" class="card-text">
                        <t t-esc="state.summary" />
                    </p>
                </div>
                <div class="card-footer">
                    <t t-if="state.summary">
                        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#disconnectModal">
                            <img t-attf-src="/reviews_insights/static/img/{{source.name}}-48.png" class="mx-1" width="24" t-att-alt="source.display_name"></img>
                            <p>Desconectar <t t-esc="source.display_name"></t>
                            </p>
                        </button>
                    </t>
                    <t t-else="">
                        <button class="btn btn-outline-primary" t-att-disabled="!state.codeClient" t-on-click="connect">
                            <img t-attf-src="/reviews_insights/static/img/{{source.name}}-48.png" class="mx-1" width="24" t-att-alt="source.display_name"></img>
                            <p>Conectar <t t-esc="source.display_name"></t>
                            </p>
                        </button>
                    </t>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="disconnectModal" tabindex="-1" aria-labelledby="disconnectModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="disconnectModalLabel">Desconectar servicio</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <p>Ya no podr√°s utilizar el servicio
                        </p>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cerrar</button>
                        <button type="button" class="btn btn-danger" t-on-click="disconnect" data-bs-dismiss="modal">Desconectar</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>